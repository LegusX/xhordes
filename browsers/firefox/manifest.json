{

  "manifest_version": 2,
  "name": "XHordes",
  "version": "0.0.2",
  "homepage_url": "https://xhordes.legusx.dev",
  "description": "The official XHordes extension. Allows users to load mods into the game Hordes.io",

  "icons": {
    "128": "icons/128.png"
  },

  "content_scripts": [
    {
      "matches": ["https://hordes.io/play"],
      "js": ["src/loader.js"]
    }
  ],

  "permissions": [
      "https://hordes.io/play",
      "unlimitedStorage",
      "storage",
      "downloads",
      "webRequest",
      "webRequestBlocking"
  ],

  "browser_action": {
      "default_popup": "popup/index.html",
      "default_title": "XHordes"
  },

  "background": {
    "scripts": [
      "src/idb-file-storage.js",
      "src/jszip.min.js",
      "src/background.js"
    ]
  },

  "web_accessible_resources": [
    "bootstrap/*",
    "install/*",
    "src/*"
  ]
}